<%- include('../partials/head') %> <%- include('../partials/header') %>

<div class="container">
  <h1>Add new shoes to inventory</h1>
  <%-include('../partials/errors') %>
  <form
    method="POST"
    action="/new"
    class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3"
  >
    <label for="name">Name:</label><br />
    <input
      type="text"
      id="name"
      name="name"
      required
      autofocus
      class="form-control form-control-dark"
      placeholder="Vaporfly 7"
    />
    <br />
    <label for="category">Category:</label><br />
    <select
      id="category"
      name="category"
      required
      class="form-control form-control-dark"
    >
      <% category.forEach((cat, index) => { %>
      <option value="<%= cat.shoetype %>"><%= cat.shoetype %></option>
      <% }) %>
    </select>
    <br />

    <label for="brand">Brand:</label><br />
    <input
      type="text"
      id="brand"
      name="brand"
      required
      class="form-control form-control-dark"
      placeholder="Nike"
    />
    <br />
    <label for="color">Color:</label><br />
    <input
      type="text"
      id="color"
      name="color"
      required
      class="form-control form-control-dark"
      placeholder="white"
    />
    <br />
    <label for="size">Size:</label><br />
    <input
      type="number"
      id="size"
      name="size"
      step="1"
      required
      class="form-control form-control-dark"
      placeholder="46"
    />
    <br />
    <label for="price">Price:</label><br />
    <input
      type="number"
      id="price"
      name="price"
      step="0.01"
      required
      class="form-control form-control-dark"
      placeholder="61.20"
    />
    <br />
    <br /><br />
    <input type="submit" value="OK" />
  </form>
</div>

<%- include('../partials/footer') %>
